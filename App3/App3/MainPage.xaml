<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App3.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Practica App3" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label Text="Nombre" FontSize="Title" Padding="30,10,30,10"/>
        <Entry Text="{Binding Nombre}"></Entry>
        <Label Text="Apellido Paterno" FontSize="Title" Padding="30,10,30,10"/>
        <Entry Text="{Binding Paterno}"></Entry>
        <Label Text="Apellido Materno" FontSize="Title" Padding="30,10,30,10"/>
        <Entry Text="{Binding Materno}"></Entry>
        <Label Text="Tu nombre completo es:" FontSize="Title" Padding="30,10,30,10"/>
        <Label Text="{Binding NombreCompleto}" FontSize="Title"></Label>
    </StackLayout>

</ContentPage>
